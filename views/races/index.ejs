<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
<main>
  <section>
    <h1>Upcoming Races</h1>

  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Name</th>
        <th>Location</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
      <% races.forEach(race => { %>
      <tr>
        <td><%= race.date %> </td>
        <td><%= race.name %> </td>
        <td><%= race.location %> </td>
        <td><%= race.time %> </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  </section>
  <a href="/races/new"> 
    <button> Add Race </button>
  </a>
</main>


<%- include('../partials/footer') %>
