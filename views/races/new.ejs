<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/races/new.css">
<%- include('../partials/nav') %>


  <h1>ADD RACE</h1>

  <form action="/races" method="POST">

    <div class="form-group col-md-3">
      <label for="race-name"> Name of Race:</label>
      <input type="text" name="name" class="form-control" id="race-name">
    </div>

    <div class="form-group col-md-3">
      <label for="race-location">Location: </label>
      <input type="text" name="location" class="form-control" id="race-location">
    </div>
    
    <div class="form-group col-md-3">
      <label for="race-date">Date</label>
      <input 
        type="date" 
        name="date" 
        class="form-control" 
        value="<%= race.date %>" autocomplete="off" 
        required> 
    </div>


    <div class="form-group col-md-3">
      <label for="race-time">Time</label>
      <input type="number" name="time" class="form-control" id="race-time">


      <label for="run-state">PM?</label>
      <input type="checkbox" name="daytime">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>


<%- include('../partials/footer') %>