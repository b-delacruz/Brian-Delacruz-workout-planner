    <div class="form-group col-md-3">
      <label for="run-location">City</label>
      <input type="text" name="city" class="form-control" value="<%= run.city %>" id="edit-city" autocomplete="off" required>
    </div>

    <div class="form-group col-md-3">
      <label for="edit-date">Date</label>
      <input type="date" name="date" class="form-control" value="<%= run.date %>" id="edit-date" autocomplete="off" required> 
