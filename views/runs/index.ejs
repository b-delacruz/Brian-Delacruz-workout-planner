<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
<link rel="stylesheet" href="/stylesheets/runs/index.css">


<main>
  
  <h1>My Runs</h1>

  <% runs.forEach(function(run) { %>
    <% if (run.owner.equals(user?.profile._id)) { %>
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row no-gutters">
        
      <div class="header-section">
        <div class="card-header-1"> 
            <%= run.date.toLocaleString().split(',')[0] %>
        </div>
        <div class="card-header-2">
          <%= run.city %>,<%= run.state %>
        </div>
      </div>
      <div class="card-body">
        <p class="card-text">
          <a href="/runs/<%= run._id %>/edit">
            You ran a total of <%= run.distance %> miles in <%= run.time %> minutes !
          </a>
        </p>
      </div>
    </div>
    <div class="footer-section" id="x-btn">
      <form action="/runs/<%= run._id %>?_method=DELETE" method="POST">
        <button class="btn">X</button>
      </form>
    </div>
</div>
    <% } %>     
  <% }) %>
</main>
  <div class="add-all-btn">
    <a href="/runs/new"> 
      <button class="btn-run"> Add Run </button>
    </a>
    <a href="/runs/all"> 
      <button class="btn-run"> All Runs </button>
    </a>
  </div>
<%- include('../partials/footer') %>

